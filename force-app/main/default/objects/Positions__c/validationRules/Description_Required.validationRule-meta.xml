<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Description_Required</fullName>
    <active>true</active>
    <errorConditionFormula>LEN(Description__c) == 0 &amp;&amp; TEXT(Status__c) == &quot;Open&quot;</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>You must enter a Description before opening a position</errorMessage>
</ValidationRule>
